# =============================================================================
# TENDER INSIGHT HUB - ENVIRONMENT CONFIGURATION
# =============================================================================
# Project: TIH-2025-001
# Version: 1.0
# Description: Environment variables template for local development and deployment
# Instructions: Copy this file to .env and update values as needed

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
APP_NAME=Tender Insight Hub
APP_VERSION=1.0.0
APP_DESCRIPTION=Cloud-Native SaaS Platform for SME Tender Management
ENVIRONMENT=development
DEBUG=true
SECRET_KEY=your-super-secret-key-change-this-in-production
API_VERSION=v1

# Server Configuration
HOST=0.0.0.0
PORT=8000
WORKERS=4
RELOAD=true

# CORS Settings
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080,https://yourdomain.com
ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
ALLOWED_HEADERS=*

# =============================================================================
# DATABASE CONFIGURATIONS
# =============================================================================

# PostgreSQL (Primary SQL Database)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=tender_insight_hub
POSTGRES_USER=tih_user
POSTGRES_PASSWORD=your-postgres-password
POSTGRES_POOL_SIZE=10
POSTGRES_MAX_OVERFLOW=20

# Database URL for SQLAlchemy
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}

# MongoDB (NoSQL Database for AI results, logs, analytics)
MONGODB_HOST=localhost
MONGODB_PORT=27017
MONGODB_DB=tender_analytics
MONGODB_USER=tih_mongo_user
MONGODB_PASSWORD=your-mongodb-password
MONGODB_AUTH_SOURCE=admin
MONGODB_URL=mongodb://${MONGODB_USER}:${MONGODB_PASSWORD}@${MONGODB_HOST}:${MONGODB_PORT}/${MONGODB_DB}?authSource=${MONGODB_AUTH_SOURCE}

# Redis (Caching and Session Management)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password
REDIS_DB=0
REDIS_URL=redis://:${REDIS_PASSWORD}@${REDIS_HOST}:${REDIS_PORT}/${REDIS_DB}

# =============================================================================
# SECURITY & AUTHENTICATION
# =============================================================================

# JWT Configuration
JWT_SECRET_KEY=your-jwt-secret-key-minimum-32-characters
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=60
JWT_REFRESH_TOKEN_EXPIRE_DAYS=30

# Encryption
ENCRYPTION_KEY=your-32-byte-encryption-key-for-sensitive-data
PASSWORD_SALT_ROUNDS=12

# API Security
API_RATE_LIMIT_PER_MINUTE=100
MAX_REQUEST_SIZE_MB=50

# =============================================================================
# EXTERNAL APIS & INTEGRATIONS
# =============================================================================

# OCDS (Open Contracting Data Standard) API
OCDS_API_BASE_URL=https://api.etenders.gov.za/v1
OCDS_API_KEY=your-ocds-api-key
OCDS_API_TIMEOUT=30
OCDS_RATE_LIMIT_PER_HOUR=1000

# AI/ML Services
HUGGINGFACE_API_KEY=your-huggingface-api-key
HUGGINGFACE_MODEL_NAME=facebook/bart-large-cnn
HUGGINGFACE_MAX_LENGTH=150
HUGGINGFACE_MIN_LENGTH=50

# Alternative AI Service (if needed)
OPENAI_API_KEY=your-openai-api-key
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_API_KEY=your-azure-openai-key

# =============================================================================
# CLOUD INFRASTRUCTURE
# =============================================================================

# AWS Configuration
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_DEFAULT_REGION=af-south-1
AWS_S3_BUCKET=tender-insight-hub-documents
AWS_CLOUDFRONT_DOMAIN=your-cloudfront-domain.cloudfront.net

# Google Cloud (Alternative)
GOOGLE_CLOUD_PROJECT_ID=your-gcp-project-id
GOOGLE_CLOUD_REGION=africa-south1
GOOGLE_CLOUD_STORAGE_BUCKET=tender-insight-hub-gcs

# Azure (Alternative)
AZURE_SUBSCRIPTION_ID=your-azure-subscription-id
AZURE_RESOURCE_GROUP=tender-insight-hub-rg
AZURE_STORAGE_ACCOUNT=tenderinsighthubstorage

# =============================================================================
# MONITORING & LOGGING
# =============================================================================

# Application Monitoring
SENTRY_DSN=your-sentry-dsn-for-error-tracking
NEW_RELIC_LICENSE_KEY=your-newrelic-license-key
LOG_LEVEL=INFO
LOG_FORMAT=json

# Analytics
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX-X
MIXPANEL_TOKEN=your-mixpanel-token

# Health Checks
HEALTH_CHECK_INTERVAL_SECONDS=60
METRICS_ENABLED=true

# =============================================================================
# EMAIL & NOTIFICATIONS
# =============================================================================

# SMTP Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=noreply@tenderinsighthub.co.za
SMTP_PASSWORD=your-smtp-app-password
SMTP_TLS=true
SMTP_SSL=false

# Email Templates
FROM_EMAIL=noreply@tenderinsighthub.co.za
SUPPORT_EMAIL=support@tenderinsighthub.co.za
ADMIN_EMAIL=admin@tenderinsighthub.co.za

# Notification Services
SLACK_WEBHOOK_URL=your-slack-webhook-for-alerts
TEAMS_WEBHOOK_URL=your-teams-webhook-for-alerts

# =============================================================================
# FEATURE FLAGS & LIMITS
# =============================================================================

# Business Logic Configuration
FREE_TIER_SEARCH_LIMIT_PER_WEEK=3
FREE_TIER_MAX_USERS=1
BASIC_TIER_MAX_USERS=3
PRO_TIER_MAX_USERS=0  # 0 = unlimited

# AI Processing Limits
MAX_DOCUMENT_SIZE_MB=25
MAX_DOCUMENTS_PER_REQUEST=5
AI_PROCESSING_TIMEOUT_SECONDS=120
CONCURRENT_AI_REQUESTS=10

# Rate Limiting
API_CALLS_PER_MINUTE_FREE=10
API_CALLS_PER_MINUTE_BASIC=50
API_CALLS_PER_MINUTE_PRO=200

# =============================================================================
# DEVELOPMENT & TESTING
# =============================================================================

# Testing Configuration
TEST_DATABASE_URL=postgresql://test_user:test_password@localhost:5432/test_tender_hub
TEST_MONGODB_URL=mongodb://localhost:27017/test_tender_analytics
TEST_REDIS_URL=redis://localhost:6379/1

# Development Tools
ENABLE_API_DOCS=true
ENABLE_SWAGGER_UI=true
ENABLE_REDOC=true
API_DOCS_URL=/docs
REDOC_URL=/redoc

# Code Quality
ENABLE_CORS=true
ENABLE_GZIP=true
ENABLE_REQUEST_LOGGING=true

# =============================================================================
# BACKUP & MAINTENANCE
# =============================================================================

# Backup Configuration
BACKUP_SCHEDULE_CRON=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=tender-insight-hub-backups

# Maintenance Windows
MAINTENANCE_WINDOW_START=02:00
MAINTENANCE_WINDOW_END=04:00
MAINTENANCE_TIMEZONE=Africa/Johannesburg

# =============================================================================
# PERFORMANCE & CACHING
# =============================================================================

# Cache Settings
CACHE_TTL_SECONDS=3600
TENDER_CACHE_TTL_HOURS=24
AI_SUMMARY_CACHE_TTL_DAYS=7

# Performance Monitoring
SLOW_QUERY_THRESHOLD_MS=1000
RESPONSE_TIME_TARGET_MS=2000
UPTIME_TARGET_PERCENTAGE=99.5

# =============================================================================
# LOCALIZATION & REGIONAL SETTINGS
# =============================================================================

# South African Specific Settings
DEFAULT_TIMEZONE=Africa/Johannesburg
DEFAULT_CURRENCY=ZAR
DEFAULT_LANGUAGE=en
DATE_FORMAT=DD/MM/YYYY
DECIMAL_SEPARATOR=.
THOUSANDS_SEPARATOR=,

# Government Procurement Settings
SA_GOVERNMENT_FINANCIAL_YEAR_START=04-01
TENDER_DEADLINE_WARNING_DAYS=7
BUDGET_RANGES=0-100000,100001-500000,500001-1000000,1000001-5000000,5000000+

# =============================================================================
# COMPLIANCE & AUDIT
# =============================================================================

# POPIA (Protection of Personal Information Act) Compliance
DATA_RETENTION_PERIOD_MONTHS=36
AUDIT_LOG_RETENTION_YEARS=7
PII_ENCRYPTION_ENABLED=true
CONSENT_TRACKING_ENABLED=true

# Security Headers
HSTS_MAX_AGE_SECONDS=31536000
CONTENT_SECURITY_POLICY=default-src 'self'
X_FRAME_OPTIONS=DENY
X_CONTENT_TYPE_OPTIONS=nosniff

# =============================================================================
# THIRD-PARTY INTEGRATIONS
# =============================================================================

# Document Processing
TEXTRACT_ENABLED=false
OCR_SERVICE_URL=https://api.ocr.space/parse/image
OCR_API_KEY=your-ocr-api-key

# Payment Processing (Future Use)
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Analytics & Tracking
SEGMENT_WRITE_KEY=your-segment-write-key
HOTJAR_ID=your-hotjar-tracking-id

# =============================================================================
# DOCKER & DEPLOYMENT
# =============================================================================

# Docker Configuration
COMPOSE_PROJECT_NAME=tender-insight-hub
CONTAINER_REGISTRY=ghcr.io/your-org/tender-insight-hub

# Deployment
DEPLOYMENT_ENVIRONMENT=development
HEALTH_CHECK_PATH=/health
READINESS_CHECK_PATH=/ready
METRICS_PATH=/metrics

# Load Balancer
LOAD_BALANCER_ALGORITHM=round_robin
SESSION_AFFINITY=false

# =============================================================================
# DEVELOPMENT TEAM SETTINGS
# =============================================================================

# Team Configuration
TEAM_SIZE=5
PROJECT_CODE=TIH-2025-001
TEAM_LEADS_ROTATION_WEEKS=3

# Development Environment
PYTHON_VERSION=3.11
NODE_VERSION=18
DOCKER_VERSION=24.0

# =============================================================================
# END OF CONFIGURATION
# =============================================================================

# Security Note: Never commit actual .env files to version control
# Always use environment-specific values in production
# Rotate secrets regularly and use proper secret management solutions
